{
  "name": "propernu",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "backend/services/*",
    "backend/gateway",
    "frontend/*"
  ],
  "scripts": {
    "dev:gateway": "npm run dev --workspace=backend/gateway",
    "dev:auth": "npm run dev --workspace=backend/services/auth-service",
    "dev:user": "npm run dev --workspace=backend/services/user-service",
    "dev:property": "npm run dev --workspace=backend/services/property-service",
    "dev:payment": "npm run dev --workspace=backend/services/payment-service",
    "dev:web": "npm run dev --workspace=frontend/web",
    "dev:admin": "npm run dev --workspace=frontend/admin-dashboard",
    "dev:backend": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:property\" \"npm run dev:payment\"",
    "dev:frontend": "concurrently \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
